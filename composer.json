{
  "name": "pollen-solutions/validation",
  "description": "Pollen Validation Component - Validation values tools.",
  "homepage": "https://www.presstify.com/pollen-solutions/validation/",
  "keywords": [
    "pollen-solutions",
    "component",
    "validation"
  ],
  "time": "2021-02-11",
  "license": "MIT",
  "authors": [
    {
      "name": "Jordy Manner",
      "email": "jordy@presstify.com",
      "role": "Developper"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://composer.presstify.com/pollen-solutions/"
    }
  ],
  "require": {
    "php": ">=7.3",
    "composer/composer": "^2.0",
    "composer/installers": "~1.0",
    "egulias/email-validator": "^3.0",
    "pollen-solutions/container": "^1.0",
    "respect/validation": "^2.1",
    "symfony/validator": "^5.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "Pollen\\Validation\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pollen\\Validation\\Test\\": "tests"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
